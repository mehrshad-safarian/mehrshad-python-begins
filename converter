# 1 foot = 30.48 cm

feet = float(input("Enter length in feet: "))
cm = feet * 30.48
print(f"{feet} feet is {cm} cm.")

centimeters = float(input("Enter length in cm: "))
feet2 = centimeters / 30.48
print(f"{centimeters} cm is {feet2} feet.")

# 1 kg â‰ˆ 2.20462 pounds

kg = float(input("Enter weight in kilograms: "))
pounds = kg * 2.20462
print(f"{kg} kg is {pounds} pounds.")

lb = float(input("Enter weight in pounds: "))
kilograms = lb / 2.20462
print(f"{lb} pounds is {kilograms} kg.")